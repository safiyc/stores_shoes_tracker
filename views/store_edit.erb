
<h1><%= @store.store_name %></h1>
<br />

<h4>Rename or Delete:</h4>

<form style="display: inline" action="/stores/<%= @store.id() %>" method="post">
  <input name="_method" type="hidden" value="patch">
  <input id="store_name" name="store_name" type="text">
  <button type="submit">Update Store</button>
</form>

<form style="display: inline;" action="/<%= @store.id() %>" method="post">
  <input name="_method" type="hidden" value="delete">
  <button type="submit">Delete Store</button>
</form>
<br />

<a href="/">Home</a>
