
<h1><%= @brand.brand_name %></h1>
<br />

<h4>Rename or Delete:</h4>

<form style="display: inline" action="/brands/<%= @brand.id() %>" method="post">
  <input name="_method" type="hidden" value="patch">
  <input id="brand_name" name="brand_name" type="text">
  <button type="submit">Update Brand</button>
</form>

<form style="display: inline;" action="/<%= @brand.id() %>" method="post">
  <input name="_method" type="hidden" value="delete">
  <button type="submit">Delete Brand</button>
</form>
<br />

<a href="/">Home</a>
