
<h1>Shoes: <%= @brand.brand_name %></h1>
<h1>$<%= @brand.price %></h1>

<form style="display: inline" action="/brands/<%= @brand.id() %>" method="post">
  <input name="_method" type="hidden" value="patch">
  <input class="input_fields" placeholder="rename" id="brand_name" name="brand_name" type="text">
  <input class="input_fields" placeholder="cost" id="price" name="price" type="text">
  <button class="btn btn-primary" type="submit">Update</button>
</form>

<div class="home"><a href="/">Home</a></div>